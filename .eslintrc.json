{
    "env": {
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-underscore-dangle":"off",
        "import/no-extraneous-dependencies":["error", {"devDependencies": false, "optionalDependencies": false, "peerDependencies": false}],
        "consistent-return": "off",
        "radix": "off",
        "no-console": "off"
    }
}
